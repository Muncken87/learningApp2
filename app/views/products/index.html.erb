<h1>Listing products</h1>

 <%= @test_variable %>

<div class="container-fluid">
  <div class="row">
    <% @products.each do |product| %>
      <div class="col-sm-2 col-md-4">
        <h1><%= product.name %></h1>
        <%= image_tag(product.image_url, class: "img-responsive") %>
        <p><%= product.description %></p>
        <p><%= product.colour %></p>
        
      </div><!-- /col -->
    <% end %>
  </div>
</div>
